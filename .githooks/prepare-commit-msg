#!/bin/bash

# Prepare commit message hook to remove Co-Authored-By lines
# This prevents any Co-Authored-By lines from being added to commits

commit_file=$1
commit_source=$2

# Remove any Co-Authored-By lines
sed -i.bak '/^Co-Authored-By:/d' "$commit_file"

# Remove backup file
rm -f "${commit_file}.bak"

exit 0