# ============================================
# AI CHATBOT DEMO CONFIGURATION
# ============================================

# REQUIRED: Add your API keys here (at least one)
# Get your keys from:
# - OpenAI: https://platform.openai.com/api-keys
# - Anthropic: https://console.anthropic.com/account/keys
OPENAI_API_KEY=your-openai-key-here
ANTHROPIC_API_KEY=your-anthropic-key-here

# ============================================
# DEFAULT DEMO SETTINGS (No changes needed)
# ============================================

# Application
APP_ENV=demo
APP_PORT=8000
FRONTEND_PORT=3000
DEBUG=false

# Database (auto-configured with Docker)
DATABASE_URL=postgresql://demo:demo123@postgres:5432/chatbot_demo
REDIS_URL=redis://redis:6379/0

# Model Configuration
DEFAULT_MODEL_PROVIDER=openai
MODEL_FALLBACK_ENABLED=true
OPENAI_DEFAULT_MODEL=gpt-3.5-turbo
ANTHROPIC_DEFAULT_MODEL=claude-3-haiku-20240307

# Demo Features
FEATURE_SEMANTIC_CACHE=true
FEATURE_STREAMING_RESPONSES=true
FEATURE_WEBSOCKET_SUPPORT=true

# Rate Limiting (per minute)
RATE_LIMIT_REQUESTS=30
RATE_LIMIT_WINDOW=60

# Security
JWT_SECRET=demo-secret-key-change-in-production
API_KEY_HEADER=X-API-Key

# Monitoring
ENABLE_METRICS=true
LOG_LEVEL=INFO